<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Matissa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Matissa.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/fc79c38429.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-matissa fixed-top">
        <div class="col-1 btn-sidebar">
            <button id="toggle-btn" class="btn btn-sidebar rounded-pill" onclick="toggleSidebar()">☰</button>
        </div>
        <h1 class="mx-auto text-center titulo-matissa letra-merienda text-light" href="#">Matissa</h1>
        <div id="cerrarSesionBtn" class="col-2 cerrar-sesion rounded-pill shadow-lg pt-2">
            <a id="cerrarSesionLink" class="nav-link text-light d-flex justify-content-center" href="#">
                <p class="mx-auto p-cerrar-sesion">Cerrar sesión</p>
                <span class="mx-auto material-symbols-outlined">
                    logout
                </span>
            </a>
        </div>
    </nav>
    <div class="sidebar">
        <h1 class="letra-merienda">Menu</h1>
        <ul class="nav flex-column text-start">
            <li class="nav-item">
                <a class="nav-link btns-sidebar text-black fw-bolder" style="box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);" asp-area="" asp-controller="Pedidos" asp-action="Index">
                    <i class="fa-solid fa-bag-shopping fa-xl"></i>
                    Pedidos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link btns-sidebar text-black fw-bolder" style="box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);" asp-action="Create" asp-controller="Clientes">
                    
                    Clientes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link btns-sidebar text-black fw-bolder" style="box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);" asp-action="Create" asp-controller="Productoes">
                    Productos
                </a>
            </li>
        </ul>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
